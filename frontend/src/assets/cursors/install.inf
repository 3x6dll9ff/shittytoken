[Version]
signature="$CHICAGO$"

[DefaultInstall]
CopyFiles = Scheme.Cur, Scheme.Txt
AddReg    = Scheme.Reg

[DestinationDirs]
Scheme.Cur = 10,"%CUR_DIR%"
Scheme.Txt = 10,"%CUR_DIR%"

[Scheme.Reg]
HKCU,"Control Panel\Cursors\Schemes","%SCHEME_NAME%",,"%10%\%CUR_DIR%\%pointer%,,%10%\%CUR_DIR%\%work%,%10%\%CUR_DIR%\%busy%,%10%\%CUR_DIR%\%Cross%,%10%\%CUR_DIR%\%Text%,,%10%\%CUR_DIR%\%Unavailiable%,%10%\%CUR_DIR%\%Vert%,%10%\%CUR_DIR%\%Horz%,%10%\%CUR_DIR%\%Dgn1%,%10%\%CUR_DIR%\%Dgn2%,%10%\%CUR_DIR%\%move%,,%10%\%CUR_DIR%\%link%"

[Scheme.Cur]
"normal.cur"
"background.ani"
"busy.ani"
"cross.cur"
"text.cur"
"unavailable.cur"
"v-resize.cur"
"h-resize.cur"
"dgn1.cur"
"dgn2.cur"
"move.cur"
"link.cur"

[Strings]
CUR_DIR      = "Cursors\CfHPlus"
SCHEME_NAME  = "Cursor for Humans Plus"
pointer      = "normal.cur"
work         = "background.ani"
busy         = "busy.ani"
cross        = "cross.cur"
text         = "text.cur"
unavailiable = "unavailable.cur"
vert         = "v-resize.cur"
horz         = "h-resize.cur"
dgn1         = "dgn1.cur"
dgn2         = "dgn2.cur"
move         = "move.cur"
link         = "link.cur"